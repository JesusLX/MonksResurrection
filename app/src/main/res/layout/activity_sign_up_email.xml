<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.limox.jesus.monksresurrection.Fragments.SignUp.SignUpEmail_Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/who_you_are"
        android:textSize="@dimen/fav_titleSize"
        android:id="@+id/title"
        android:textStyle="bold"
        android:layout_margin="@dimen/fav_margin"/>
    <EditText
        android:layout_below="@+id/title"
        android:id="@+id/sue_edtEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/ic_clear_black_24dp"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:textColor="@color/fontColor"
        android:textSize="@dimen/fav_titleSize" />


        <Button
            android:layout_below="@+id/sue_edtEmail"
            android:id="@+id/sue_btnNext"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/sue_txvSignIn"
        android:background="@color/colorSeparator" />

    <TextView
        android:id="@+id/sue_txvSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/lgn_pddingTop"
        android:text="@string/ssu_txvSignIn"
        android:textAlignment="center"
        android:textColor="@color/fontColor" />


</RelativeLayout>
