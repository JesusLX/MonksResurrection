<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/lgn_background"
    tools:context="com.limox.jesus.monksresurrection.Login_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/lgn_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_image_height"
        android:background="@drawable/login_vectorized"
        />


    <android.support.design.widget.TextInputLayout
        android:paddingTop="@dimen/lgn_pddingTop"
        android:id="@+id/lgn_tilUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lgn_title"
        app:errorTextAppearance="@color/colorError"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:fitsSystemWindows="true"
        android:textColorHint="@color/fontColor">

        <EditText
            android:id="@+id/lgn_edtUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/lgn_usr_name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lgn_tilPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_below="@+id/lgn_tilUser"
        app:errorTextAppearance="@color/colorError"
        android:textColorHint="@color/fontColor">

        <EditText
            android:id="@+id/lgn_edtPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/lgn_usr_passwrd"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:id="@+id/lgn_llSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lgn_tilPassword"
        android:gravity="center"
        android:paddingTop="@dimen/lgn_pddingTop">

        <Button
            android:id="@+id/lgn_btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lgn_sign_in" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lgn_FP"
            android:id="@+id/lgn_txvFP"
            android:layout_below="@+id/lgn_btnSignIn"
            android:textColor="@color/fontColor"
            />
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="@dimen/lgn_pddingTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lgn_llSignIn"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:id="@+id/lgn_rlSeparator">

        <View
            android:id="@+id/lgn_vwRigthLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@+id/lgn_txvMidleText"
            android:background="@color/colorSeparator" />

        <TextView
            android:id="@+id/lgn_txvMidleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="O"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorSeparator"/>

        <View
            android:id="@+id/lgn_vwLeftLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/lgn_txvMidleText"
            android:background="@color/colorSeparator" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="@dimen/lgn_pddingTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lgn_rlSeparator"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F"
            android:id="@+id/lgn_btnFb"
            android:background="@color/facebookColor"
            android:textColor="#FFF"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G"
            android:id="@+id/lgn_btnGg"
            android:layout_toEndOf="@+id/lgn_btnFb"
            android:background="@color/googleColor"
            android:textColor="#FFF"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:id="@+id/lgn_btnStm"
            android:layout_toEndOf="@+id/lgn_btnGg"
            android:background="@color/steamColor"
            android:textColor="#FFF"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/fontColor"
        android:id="@+id/lgn_txvSignUp"/>

</RelativeLayout>
