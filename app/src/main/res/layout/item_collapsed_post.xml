<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cp_CvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <Toolbar
                android:id="@+id/cp_tbTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimaryDark"

                >

                <ImageView

                    android:id="@+id/cp_iVProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/cp_txvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="User name"
                    android:textColor="#FFF"
                    android:textSize="@dimen/cp_titleSize"
                    android:textStyle="bold" />

            </Toolbar>

            <TextView
                android:id="@+id/cp_txvPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cp_tbTitle"
                android:layout_marginBottom="@dimen/fav_margin"
                android:layout_marginStart="@dimen/fav_margin"
                android:layout_marginTop="@dimen/fav_margin"
                android:text="Description"
                android:textColor="#FFF"
                android:textSize="@dimen/cp_titleSize" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>