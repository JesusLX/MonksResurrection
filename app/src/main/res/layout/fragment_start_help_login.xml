<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/collapsed_post_bg"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.limox.jesus.teambeta.Fragments.HelpLogin.StartHelpLogin_Fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recover_account"
        android:layout_margin="@dimen/title_margin"
        android:id="@+id/hl_txvTitle"
        android:textSize="@dimen/fav_titleSize"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hl_vwSeparator0"
        android:layout_below="@+id/hl_txvTitle"
        android:background="@color/colorSeparator"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/with_email"
        android:id="@+id/hl_txvRecoverWithEmail"
        android:layout_below="@+id/hl_vwSeparator0"
        android:layout_margin="@dimen/title_margin"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hl_vwSeparator1"
        android:layout_below="@+id/hl_txvRecoverWithEmail"
        android:background="@android:color/darker_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/with_Gg"
        android:id="@+id/hl_txvRecoverWithGg"
        android:layout_below="@+id/hl_vwSeparator1"
        android:layout_margin="@dimen/title_margin"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hl_vwSeparator2"
        android:layout_below="@+id/hl_txvRecoverWithGg"
        android:background="@android:color/darker_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/with_Fb"
        android:id="@+id/hl_txvRecoverWithFb"
        android:layout_below="@+id/hl_vwSeparator2"
        android:layout_margin="@dimen/title_margin"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hl_vwSeparator3"
        android:layout_below="@+id/hl_txvRecoverWithFb"
        android:background="@android:color/darker_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/with_St"
        android:id="@+id/hl_txvRecoverWithSt"
        android:layout_below="@+id/hl_vwSeparator3"
        android:layout_margin="@dimen/title_margin"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hl_vwSeparator4"
        android:layout_below="@+id/hl_txvRecoverWithSt"
        android:background="@android:color/darker_gray"
        />


</RelativeLayout>
