<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ItemPostTheme"
    android:id="@+id/cp_rlContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


            <ImageView

                android:id="@+id/cp_iVProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/cp_txvPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fav_margin"
                android:layout_toEndOf="@+id/cp_iVProfile"
                android:text="Title"
                android:textSize="@dimen/cp_titleSize" />
            <TextView
                android:id="@+id/cp_txvPostContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cp_txvPostTitle"
                android:layout_toEndOf="@+id/cp_iVProfile"
                android:layout_marginStart="@dimen/fav_margin"
                android:layout_marginBottom="@dimen/fav_margin"
                android:layout_marginEnd="@dimen/fav_margin"
                android:text="Description"
         />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:background="@color/colorPostSeparator"
        android:layout_alignParentBottom="true"/>
        </RelativeLayout>

