<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.limox.jesus.teambeta.Fragments.Forums.CreateForumFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarColorBg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/fv_rlLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolbarColorBg">

                <ImageView
                    android:id="@+id/cf_ivLogo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_add_photo" />
            </RelativeLayout>


            <EditText
                android:id="@+id/cf_edtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fv_rlLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:hint="@string/forums_name"
                android:inputType="textPersonName"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cf_edtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cf_edtName"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:maxLines="5" />

            <TextView
                android:id="@+id/cf_txvTitleUserKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cf_edtDescription"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/users_key" />

            <EditText
                android:id="@+id/cf_edtUserKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cf_txvTitleUserKey"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_action_key"
                android:hint="@string/users_key"
                android:inputType="textVisiblePassword"
                android:lines="1" />

            <TextView
                android:id="@+id/cf_txvTitleAdminKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cf_edtUserKey"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/admins_key" />

            <EditText
                android:id="@+id/cf_edtAdminKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cf_txvTitleAdminKey"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_action_bug"
                android:hint="@string/admins_key"
                android:inputType="textVisiblePassword"
                android:lines="1" />

            <EditText
                android:id="@+id/cf_edtTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cf_edtAdminKey"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_action_tag"
                android:hint="@string/tags_separated_by_comma"
                android:inputType="textShortMessage"
                android:maxLines="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cf_edtTags"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/cf_btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@android:string/cancel" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/cf_btnCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@android:string/ok" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
