<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_heigth"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_heigth"
        android:scaleType="centerCrop" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cd_civUserProfile"
        android:layout_width="@dimen/image_prf"
        android:layout_height="@dimen/image_prf"
        android:layout_above="@+id/rlContainer"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nino" />

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4b000000"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/cd_txvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/title_user_name"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="@dimen/fav_titleSize"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>